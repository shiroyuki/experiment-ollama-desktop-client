<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="TOP_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.shiroyuki.ollama_desktop.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextField fx:id="apiUri">http://127.0.0.1:11434/</TextField>

    <VBox fx:id="logs">
        <Label>Welcome to Hallo, your simple LLM client.</Label>
    </VBox>

    <TextArea fx:id="prompt"
              prefWidth="Infinity"
              prefHeight="200"
              onKeyPressed="#onKeyPressed"
              onKeyReleased="#onKeyReleased"/>

    <HBox alignment="CENTER_LEFT">
        <Button text="Send" onAction="#onPromptSubmit"/>
        <Label fx:id="status">
            <padding>
                <Insets left="10"/>
            </padding>
        </Label>
    </HBox>
</VBox>
